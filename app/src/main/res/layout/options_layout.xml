<?xml version="1.0" encoding="utf-8"?>
<com.chernandezgil.farmacias.expandable.ExpandableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/optionsRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    custom:ael_duration="200"
    custom:ael_expanded="false"
    custom:ael_size="86"
    android:orientation="vertical"
    android:background="@color/gray100"

   >

    <TextView
        android:id="@+id/address"
        style="@style/TextViewOptionsRow"
         android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
    />
    <TextView
        android:id="@+id/txtPhone"
        style="@style/TextViewOptionsRow"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp">

        <ImageView

            android:id="@+id/ivPhone"
            style="@style/ImageViewOptions"
            app:srcCompat="@drawable/phone" />

        <View
            style="@style/VerticalSparator"
            />

        <ImageView
            android:id="@+id/ivGo"
            style="@style/ImageViewOptions"
            app:srcCompat="@drawable/directions" />

        <View
            style="@style/VerticalSparator" />

        <ImageView
            android:id="@+id/ivShare"
            style="@style/ImageViewOptions"
            app:srcCompat="@drawable/share" />

        <View
            style="@style/VerticalSparator" />

        <ImageView
            android:id="@+id/ivSchedule"
            style="@style/ImageViewOptions"
            app:srcCompat="@drawable/clock" />

        <View
            style="@style/VerticalSparator" />

        <ImageView
            android:id="@+id/ivFavorite"
            style="@style/ImageViewOptions"
            app:srcCompat="@drawable/heart" />

    </LinearLayout>
</com.chernandezgil.farmacias.expandable.ExpandableLinearLayout>