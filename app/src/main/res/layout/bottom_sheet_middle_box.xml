<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ltgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bsmb_initial_margin_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivCall"
            style="@style/BottomSheetMiddleBoxImageView"
            app:srcCompat="@drawable/phone1" />

        <ImageView
            android:id="@+id/ivGo"
            style="@style/BottomSheetMiddleBoxImageView"
            app:srcCompat="@drawable/directions" />

        <ImageView
            android:id="@+id/ivShare"
            style="@style/BottomSheetMiddleBoxImageView"
            app:srcCompat="@drawable/share" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bsmb_initial_margin_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtCall"
            style="@style/BottomSheetMiddleBoxTextView"
            tools:text="LLAMAR"
            />

        <TextView
            android:id="@+id/txtGo"
            style="@style/BottomSheetMiddleBoxTextView"
            tools:text="IR"/>

        <TextView
            android:id="@+id/txtShare"
            style="@style/BottomSheetMiddleBoxTextView"
            tools:text="COMPARTIR"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ltgray" />
</LinearLayout>