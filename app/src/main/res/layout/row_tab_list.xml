<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/rtl_card_margin_bottom"
    android:layout_marginTop="@dimen/rtl_card_margin_top"
    android:stateListAnimator="@animator/statelistanimator_pharmacy"
    card_view:cardCornerRadius="@dimen/rtl_card_corner_radius"
    card_view:cardElevation="@dimen/rtl_card_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rtl_outer_linear_margin_bottom"
        android:layout_marginEnd="@dimen/rtl_outer_linear_margin_right"
        android:layout_marginLeft="@dimen/rtl_outer_linear_margin_left"
        android:layout_marginRight="@dimen/rtl_outer_linear_margin_right"
        android:layout_marginStart="@dimen/rtl_outer_linear_margin_left"
        android:layout_marginTop="@dimen/rtl_outer_linear_margin_top"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="@dimen/rtl_tvOrder_width"
                android:layout_height="@dimen/rtl_tvOrder_height"
                android:layout_marginTop="@dimen/rtl_tvOrder_margin_top"
                android:background="@drawable/shape_circle_order_open"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/rtl_tvOrder_text_size"
                tools:text="A" />

            <TextView
                android:id="@+id/tvName"
                style="@style/Widget.TimeRow2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:alpha="0.87"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="@dimen/rtl_tvName_padding_left"
                android:paddingStart="@dimen/rtl_tvName_padding_left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/rtl_tvName_text_size"
                tools:text="Farmacia Fernandez de los Rios" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="0dp"
                android:layout_height="@dimen/rtl_tvDistance_height"
                android:layout_weight="1.2"
                android:gravity="center"
                android:textColor="@color/blue_mobile_web"
                tools:text="0,124 Km" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStreet"
            style="@style/Widget.TimeRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rtl_tvStreet_margin_left"
            android:alpha="0.54"
            android:textColor="@android:color/black"
            android:textSize="@dimen/rtl_tvStreet_text_size"
            tools:text="Calle Conde de Cartagena 36" />


        <TextView
            android:id="@+id/tvOpen"
            style="@style/Widget.TimeRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rtl_tvOpen_margin_bottom"
            android:layout_marginLeft="@dimen/rtl_tvOpen_margin_left"
            android:fontFamily="sans-serif-medium"
            tools:text="Open" />

        <include
            layout="@layout/layout_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rtl_layout_options_margin_left"
            android:layout_marginTop="@dimen/rtl_layout_options_margin_top"
            android:visibility="invisible" />
    </LinearLayout>
</android.support.v7.widget.CardView>


